{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "novel-ide://spec-kit/config.schema.json",
  "title": "Spec-Kit Config",
  "type": "object",
  "required": [
    "spec_kit_version",
    "story_type",
    "target_words",
    "chapter_count",
    "chapter_word_target",
    "style",
    "rhythm",
    "ratios",
    "theme"
  ],
  "properties": {
    "spec_kit_version": { "type": "string" },
    "story_type": { "type": "string" },
    "target_words": { "type": "integer", "minimum": 1000 },
    "chapter_count": { "type": "integer", "minimum": 1 },
    "chapter_word_target": { "type": "integer", "minimum": 200 },
    "style": {
      "type": "object",
      "required": ["pov", "tense", "tone"],
      "properties": {
        "pov": { "type": "string" },
        "tense": { "type": "string" },
        "tone": { "type": "string" }
      },
      "additionalProperties": false
    },
    "rhythm": {
      "type": "object",
      "required": ["act1_ratio", "act2_ratio", "act3_ratio", "tension_baseline", "tension_peak"],
      "properties": {
        "act1_ratio": { "type": "number", "minimum": 0, "maximum": 1 },
        "act2_ratio": { "type": "number", "minimum": 0, "maximum": 1 },
        "act3_ratio": { "type": "number", "minimum": 0, "maximum": 1 },
        "tension_baseline": { "type": "integer", "minimum": 0, "maximum": 100 },
        "tension_peak": { "type": "integer", "minimum": 0, "maximum": 100 }
      },
      "additionalProperties": false
    },
    "ratios": {
      "type": "object",
      "required": ["dialogue", "action", "description"],
      "properties": {
        "dialogue": { "type": "number", "minimum": 0, "maximum": 1 },
        "action": { "type": "number", "minimum": 0, "maximum": 1 },
        "description": { "type": "number", "minimum": 0, "maximum": 1 }
      },
      "additionalProperties": false
    },
    "theme": {
      "type": "object",
      "required": ["statement", "keywords"],
      "properties": {
        "statement": { "type": "string" },
        "keywords": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
